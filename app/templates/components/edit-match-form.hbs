<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group col-sm-12">
            <label for="map">Stadion</label>
            <input type="text" class="form-control" name="map" value="{{CurrentMatch.map}}" required="required">
        </div>
        <div class="form-group col-sm-12">
            <label for="type">Játékosok száma</label>
            <input type="text" class="form-control"  name="type" value="{{CurrentMatch.type}}" required="required">
        </div>
        <div class="form-group col-sm-12">
            <label for="victor">Nyertes</label>
            <select class="form-control" name="victor">
                {{#if CurrentMatch.team1win}}
                    <option value="true">Hazai csapat</option>
                    <option value="false">Vendég csapat</option>
                {{else}}
                    <option value="true">Vendég csapat</option>
                    <option value="false">Hazai csapat</option>
                {{/if}}
                
            </select>
        </div>
        <div class="form-group col-sm-6">
            <label for="team1_1" class="col-lg-2 control-label">Hazaiak</label>
            <br><br>
            <div class="team1">
                <select class="form-control" name="team1_1">
                    <option value="null"></option>
                    {{#each players as |player|}}
                    <option value="{{player.id}}">{{player.name}}</option>
                    {{/each}}
                </select>
                <br>
                <select class="form-control" name="team1_2">
                    <option value="null"></option>
                    {{#each players as |player|}}
                    <option value="{{player.id}}">{{player.name}}</option>
                    {{/each}}
                </select>
                <br>
                <select class="form-control" name="team1_3">
                    <option value="null"></option>
                    {{#each players as |player|}}
                    <option value="{{player.id}}">{{player.name}}</option>
                    {{/each}}
                </select>
                <br>
                <select class="form-control" name="team1_4">
                    <option value="null"></option>
                    {{#each players as |player|}}
                    <option value="{{player.id}}">{{player.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group col-sm-6">
            <label for="team2_1" class="col-lg-2 control-label">Vendégek</label>
            <br><br>
            <div class="team2">
                <select class="form-control" name="team2_1">
                    <option value="null"></option>
                    {{#each players as |player|}}
                    <option value="{{player.id}}">{{player.name}}</option>
                    {{/each}}
                </select>
                <br>
                <select class="form-control" name="team2_2">
                    <option value="null"></option>
                    {{#each players as |player|}}
                    <option value="{{player.id}}">{{player.name}}</option>
                    {{/each}}
                </select>
                <br>
                <select class="form-control" name="team2_3">
                    <option value="null"></option>
                    {{#each players as |player|}}
                    <option value="{{player.id}}">{{player.name}}</option>
                    {{/each}}
                </select>
                <br>
                <select class="form-control" name="team2_4">
                    <option value="null"></option>
                    {{#each players as |player|}}
                    <option value="{{player.id}}">{{player.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <button {{action "onSubmit" CurrentMatch.id}} class="btn btn-primary">Hozzáadás</button>
        </div>
    </fieldset>
</form>